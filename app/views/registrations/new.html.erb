<h1><%= t('registration.sign_up', :default => 'Sign up') %></h1>

<% form_for(:registration, @registration, :url => registrations_path) do |f| %>

  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit t('registration.sign_up', :default => 'Sign up') %>
  </p>

<% end %>